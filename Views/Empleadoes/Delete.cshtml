@model FisioTerapias.Models.Empleado

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que desea eliminar esto?</h3>
<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IdEspecialidadNavigation)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IdEspecialidadNavigation.IdEspecialidad)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEmpleado" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
    </form>
</div>
