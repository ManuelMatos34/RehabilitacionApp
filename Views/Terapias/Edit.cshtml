@model FisioTerapias.Models.Terapia

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Terapia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTerapia" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <input asp-for="Diagnostico" class="form-control" />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Historial" class="control-label"></label>
                <input asp-for="Historial" class="form-control" />
                <span asp-validation-for="Historial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NecesidadDelPaciente" class="control-label"></label>
                <input asp-for="NecesidadDelPaciente" class="form-control" />
                <span asp-validation-for="NecesidadDelPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadDeTerapias" class="control-label"></label>
                <input asp-for="CantidadDeTerapias" class="form-control" />
                <span asp-validation-for="CantidadDeTerapias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPaciente" class="control-label"></label>
                <select asp-for="IdPaciente" class="form-control" asp-items="ViewBag.IdPaciente"></select>
                <span asp-validation-for="IdPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoTerapia" class="control-label"></label>
                <select asp-for="IdEstadoTerapia" class="form-control" asp-items="ViewBag.IdEstadoTerapia"></select>
                <span asp-validation-for="IdEstadoTerapia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.IdEmpleado"></select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
