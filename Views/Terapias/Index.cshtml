@model IEnumerable<FisioTerapias.Models.Terapia>

@{
}

<h1>Lista de Terapias</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nuevo</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Diagnostico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NecesidadDelPaciente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdEstadoTerapiaNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPacienteNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diagnostico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NecesidadDelPaciente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEstadoTerapiaNavigation.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPacienteNavigation.Nombre)
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.IdTerapia">Detalles</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdTerapia">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
