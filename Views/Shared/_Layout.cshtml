<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FisioTerapias</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FisioTerapias.styles.css" asp-append-version="true" />

    <!-- Google Fonts: Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FisioTerapias</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Pacientes y Especialistas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" id="pacientesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pacientes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="pacientesDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Terapias" asp-action="Index">Lista de Terapias</a></li>
                                @* <li><a class="dropdown-item" asp-area="" asp-controller="Seguimientoes" asp-action="Index">Lista de Seguimientos</a></li> *@
                            </ul>
                        </li>

                        <!-- Mantenimiento -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" id="mantenimientoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mantenimiento
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="mantenimientoDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Pacientes" asp-action="Index">Lista de Pacientes</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Empleadoes" asp-action="Index">Lista de Especialistas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="EstadoPacientes" asp-action="Index">Lista de Estados Pacientes</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Roles" asp-action="Index">Lista de Roles</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="EstadoTerapias" asp-action="Index">Lista de Estados Terapias</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="Index">Lista de Usuarios</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Especialidades" asp-action="Index">Lista de Especialidades</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FisioTerapias - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
